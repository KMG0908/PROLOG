<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.prolog.prolog.HelpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorAccent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="KISA"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:id="@+id/kisa"
                android:layout_below="@+id/toolbar"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_below="@+id/kisa"
                android:id="@+id/kisa_line"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal"
                android:background="@drawable/box">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/ic_local_phone_black_24dp"
                    android:id="@+id/kisa_phone"
                    android:background="#00000000"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/kisa_internet"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_language_black_24dp" />

                <ImageButton
                    android:id="@+id/kisa_mail"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_email_black_24dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="국방부"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:id="@+id/military"
                android:layout_below="@+id/kisa_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:id="@+id/mili_line"
                android:layout_below="@+id/military"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal"
                android:background="@drawable/box">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:id="@+id/mili_phone"
                    app:srcCompat="@drawable/ic_local_phone_black_24dp"
                    android:background="#00000000"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/mili_internet"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_language_black_24dp" />

                <ImageButton
                    android:id="@+id/mili_mail"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_email_black_24dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:text="사이버 수사대"
                android:textSize="25dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:id="@+id/police"
                android:layout_below="@+id/mili_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_below="@+id/police"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/police_line"
                android:gravity="center_horizontal"
                android:background="@drawable/box">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/ic_local_phone_black_24dp"
                    android:id="@+id/police_phone"
                    android:background="#00000000"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:id="@+id/police_internet"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_language_black_24dp" />

                <ImageButton
                    android:id="@+id/police_mail"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_email_black_24dp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navigation"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"></android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>